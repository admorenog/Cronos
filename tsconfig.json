{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$app/*": [
				"./app/*"
			],
			"$models*": [
				"./app/models*"
			],
			"$controllers*": [
				"./app/controllers*"
			],
			"$modules*": [
				"./modules*"
			],
			"$core*": [
				"./core*"
			],
			"$logs*": [
				"./storage/logs*"
			],
			"$db*": [
				"./storage/db*"
			]
		},
		"plugins": [
			 {
				 "transform": "@zerollup/ts-transform-paths"
			 }
		 ],
		"outDir": "./dist",
		"inlineSourceMap": true,
		"moduleResolution": "node",
		"types" : ["node"],
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"target": "esnext",
		"typeRoots": [
			"node_modules/@types"
		]
	}
}
