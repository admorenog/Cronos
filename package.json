{
  "name": "cronos",
  "version": "0.0.1",
  "description": "Manage automatized tasks using the crontab",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "ttsc -P ./tsconfig.json",
    "build": "npm-run-all tsc",
    "serve_dev": "docker-compose -f docker/docker-compose.debug.yml up",
    "serve": "docker-compose -f docker/docker-compose.yml up",
    "start": "NODE_ENV=debug node_modules/.bin/babel-node --inspect=0.0.0.0 /cronos/dist/app.js .",
    "otr_start": "NODE_ENV=debug node_modules/.bin/babel-node --inspect=0.0.0.0 dist/app.js .",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch app -e ts --exec npm run dev:start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "connect-busboy": "^1.0.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cron-parser": "^3.5.0",
    "express": "^4.17.2",
    "express-basic-auth": "^1.2.1",
    "mime-types": "^2.1.34",
    "moment": "^2.29.1",
    "nedb": "^1.8.0",
    "nodemailer": "^6.7.2",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/nedb": "^1.8.12",
    "@types/node": "^17.0.5",
    "@types/nodemailer": "^6.4.4",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-plugin-module-resolver": "^4.1.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tspath": "^1.3.7",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4",
    "typescript-transform-paths": "^3.3.1"
  },
  "engines": {
    "node": "latest"
  },
  "keywords": [
    "Crontab",
    "node"
  ],
  "type" : "module",
  "author": "Adrián Moreno García",
  "license": "MIT"
}
