{
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Chrome",
			"port": 9222,
			"request": "attach",
			"type": "pwa-chrome",
			"webRoot": "${workspaceFolder}/app/views/src",
			"sourceMapPathOverrides": {
				"webpack:///src/*": "${webRoot}/*"
			}
		},
		{
			"name": "Launch Chrome debug",
			"type": "pwa-chrome",
			"request": "launch",
			"url": "http://localhost:8000",
			"webRoot": "${workspaceFolder}",
			"pathMapping": {
				"/" : "${workspaceFolder}/public/js/"
			}
		},
		{
			"name": "Debug command",
			"address": "127.0.0.1",
			"localRoot": "${workspaceFolder}",
			"port": 9230,
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node"
		},
		{
			"name": "Debug server",
			"address": "127.0.0.1",
			"localRoot": "${workspaceFolder}",
			"port": 9229,
			"remoteRoot": "/cronos",
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outFiles": ["${workspaceFolder}/dist"],
			"continueOnAttach": true,
			"type": "node",
			"timeout": 60000,
			"sourceMaps": true
		}
	]
}
